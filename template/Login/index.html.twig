{% extends 'base.html.twig' %}
{% block menu %}Liste des Logins{% endblock %}
{% block body %}
<div class="col-12">
        <div class="card card-primary col-12">
            <div class="card-header">
                <ul class="nav">
                    <li class="nav-item">
                            Liste des Logins
                    </li>
                    <li class="nav-item ml-auto mr-2">
                        <a href="{{ makeUrl('TijaraShop/login/new') }}" class="btn btn-sm btn-success">Ajouter Login</a>
                    </li>
                </ul>
            </div>
            <div class="card-body table-responsive">
                <table class="table " id="myTable">
                    <thead class="thead-dark">
                    <th>id </th>
<th>username </th>
<th>password </th>
<th>hasAdmin </th>
<th>hasCompta </th>
<th>hasProductManagement </th>
<th>hasSupplierManagement </th>
<th>hasStock </th>
<th>hasCaisse </th>
<th>isDefaultPass </th>
<th>version </th>

                    <th>Action</th>
                    </thead>
                    <tbdody>
                        {% for Login in Logins %}
                        <tr>
                           <td>{{ Login.id }}</td>
<td>{{ Login.username }}</td>
<td>{{ Login.password }}</td>
<td>{{ Login.hasAdmin }}</td>
<td>{{ Login.hasCompta }}</td>
<td>{{ Login.hasProductManagement }}</td>
<td>{{ Login.hasSupplierManagement }}</td>
<td>{{ Login.hasStock }}</td>
<td>{{ Login.hasCaisse }}</td>
<td>{{ Login.isDefaultPass }}</td>
<td>{{ Login.version }}</td>


                           <td>
                                <a href="{{ makeUrl('TijaraShop/login/read') }}&id={{ Login.id }}">
                                        <button class="btn btn-success" data-toggle="tooltip" data-placement="top"
                                                title="Voir">
                                            <i class="fa fa-eye"></i>
                                        </button>
                                    </a>

                                <div class="float-right">
                                    <a href="{{ makeUrl('TijaraShop/login/edit') }}&id={{ Login.id }}">
                                        <button class="btn btn-warning" data-toggle="tooltip" data-placement="top"
                                            title="Editer">
                                            <i class="fa fa-edit"></i>
                                        </button>
                                    </a>

                                    <a href="{{ makeUrl('TijaraShop/login/delete') }}&id={{ Login.id }}">
                                        <button class="btn  btn-danger" data-toggle="tooltip" data-placement="top"
                                            title="Supprimer">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </a>
                                </div>
                           </td>
                        </tr>

                        {% endfor %}
                    </tbdody>
                </table>
                <script>
                    $(document).ready(function () {
                        $('#myTable').dataTable({
                            "searching": false
                        });
                    });
                </script>
            </div>
        </div>
    </div>
{% endblock %}