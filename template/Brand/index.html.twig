{% extends 'base.html.twig' %}
{% block menu %}Liste des Brands{% endblock %}
{% block body %}
<div class="col-12">
        <div class="card card-primary col-12">
            <div class="card-header">
                <ul class="nav">
                    <li class="nav-item">
                            Liste des Brands
                    </li>
                    <li class="nav-item ml-auto mr-2">
                        <a href="{{ makeUrl('TijaraShop/brand/new') }}" class="btn btn-sm btn-success">Ajouter Brand</a>
                    </li>
                </ul>
            </div>
            <div class="card-body table-responsive">
                <table class="table " id="myTable">
                    <thead class="thead-dark">
                    <th>id </th>
<th>nom </th>
<th>position </th>

                    <th>Action</th>
                    </thead>
                    <tbdody>
                        {% for Brand in Brands %}
                        <tr>
                           <td>{{ Brand.id }}</td>
<td>{{ Brand.nom }}</td>
<td>{{ Brand.position }}</td>


                           <td>
                                <a href="{{ makeUrl('TijaraShop/brand/read') }}&id={{ Brand.id }}">
                                        <button class="btn btn-success" data-toggle="tooltip" data-placement="top"
                                                title="Voir">
                                            <i class="fa fa-eye"></i>
                                        </button>
                                    </a>

                                <div class="float-right">
                                    <a href="{{ makeUrl('TijaraShop/brand/edit') }}&id={{ Brand.id }}">
                                        <button class="btn btn-warning" data-toggle="tooltip" data-placement="top"
                                            title="Editer">
                                            <i class="fa fa-edit"></i>
                                        </button>
                                    </a>

                                    <a href="{{ makeUrl('TijaraShop/brand/delete') }}&id={{ Brand.id }}">
                                        <button class="btn  btn-danger" data-toggle="tooltip" data-placement="top"
                                            title="Supprimer">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </a>
                                </div>
                           </td>
                        </tr>

                        {% endfor %}
                    </tbdody>
                </table>
                <script>
                    $(document).ready(function () {
                        $('#myTable').dataTable({
                            "searching": false
                        });
                    });
                </script>
            </div>
        </div>
    </div>
{% endblock %}